@model MiniBlog.Models.FolderModel
@using (Html.BeginForm("Folder/Save", "Media"))
{
    <div class="modal-body">
        @Html.TextBoxFor(m => m.FolderID, new { @class = "form-control", required = "required", type = "hidden", value = Model.FolderID })
        @Html.TextBoxFor(m => m.ParentFolderID, new { @class = "form-control", required = "required", type = "hidden", value = Model.ParentFolderID })
        <div class="form-group">
            @Html.LabelFor(m => m.FolderName)
            @Html.TextBoxFor(m => m.FolderName, new { @class = "form-control", required = "required", type = "text", value = Model.FolderName })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FolderDescription)
            @Html.TextAreaFor(m => m.FolderDescription, new { @class = "form-control", value = Model.FolderDescription })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FolderFileTypes)
            @Html.TextBoxFor(m => m.FolderFileTypes, new { @class = "form-control", type = "text", value = Model.FolderFileTypes })
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
}
<script>
    $(function () {
        $("input#FolderFileTypes").tagsinput('items');
    });
</script>
