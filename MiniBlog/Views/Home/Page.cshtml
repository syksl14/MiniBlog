@model MiniBlog.Models.Page
@{
    ViewBag.Keywords = Model.Keywords;
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}
@if (Model.CoverPhoto == null)
{
    Model.CoverPhoto = "~/Content/imgs/no-image.png";
}
<header class="intro-header" style="background-image: url('@Url.Content(Model.CoverPhoto)')">
    <div class="header-filtre">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>@Model.Title</h1>
                        <span class="subheading">@Model.HeaderText</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-1 col-md-12">
        </div>
        <div class="col-lg-2 col-md-12">
           
        </div>
        <div class="col-lg-6 col-md-10">
            @if (@HttpContext.Current.User.Identity.Name != "")
            {
                <!-- Admin access area -->
                <div class="text-right">
                    <button type="button" class="btn btn-primary" onclick="pages.edit(@Model.PageID);"><i class="fa fa-pencil"></i>&nbsp;Düzenle</button>
                    <button type="button" class="btn btn-danger" data-href="/Pages/Delete/@Model.PageID" data-toggle="modal" data-target="#modalConfirmDelete"><i class="fa fa-trash"></i>&nbsp;Sil</button>
                </div>
                <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="modalConfirmDelete" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                Blog Sil
                            </div>
                            <div class="modal-body">
                                Blog yazısı silinicektir devam edilsin mi?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                                <a class="btn btn-danger btn-ok">Sil</a>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    $(function () {
                        $('#modalConfirmDelete').on('show.bs.modal', function (e) {
                            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
                        });
                    });
                    var pages = {
                        edit: function (PageID) {
                            localStorage.setItem("PageID", PageID);
                            location.href = "/Admin/Pages";
                        }
                    }
                </script>
                <!-- Admin access area -->
            }
            <p>@Html.Raw(Model.Page1)</p>
        </div>
        <div class="col-lg-2 col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    Reklam alanı
                </div>
            </div>
        </div>
        <div class="col-lg-1 col-md-12">
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <b class="tags">Etiketler: </b>
            @foreach (string key in Model.Keywords.Split(',').ToList())
            {
                <span class="badge badge-primary">@Html.ActionLink(key, "Tag", new { keyword = key })</span>
            }
        </div>
        <div class="col-md-3"></div>
    </div>
</div>