@model MiniBlog.Models.PageModel 
@using (Html.BeginForm("Add", "Pages"))
{ 
<div class="modal-body">
    @Html.TextBoxFor(m => m.PageID, new { @class = "form-control", required = "required", type = "hidden" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HeaderText)
        @Html.TextBoxFor(m => m.HeaderText, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FriendlyName)
        @Html.TextBoxFor(m => m.FriendlyName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Page)
        @Html.TextAreaFor(m => m.Page, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PageOrder)
        @Html.TextBoxFor(m => m.PageOrder, new { @class = "form-control", style = "width: 100%;", required = "required", value = Model.PageOrder })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Keywords)
        @Html.TextBoxFor(m => m.Keywords, new { @class = "form-control", style = "width: 100%;", required = "required" })
    </div>
    <div class="form-group">
        @Html.CheckBox("Privacy", false, new { @class = "form-check-input" })
        <label class="form-check-label" for="Privacy">Taslak</label> (Yayınlanmayacaktır)
    </div>
    <div class="form-group" for="file">
        <label for="file">Kapak Fotoğrafı</label>
        <input type="file" name="file" id="file" class="form-control" data-val="true" accept="image/*" />
    </div>
</div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
}
<script>
    $(function () {
        $("textarea#Page").summernote({
            height: 250,
            lang: 'tr-TR',
            dialogsInBody: true
        });
        //initialize basic image select button 
        $(".note-btn-group i.note-icon-picture").click(function () {
            setTimeout(function () {
                mediaPlugin.init();
            }, 300);
        });
        $("input#Keywords").tagsinput('items');
    });
</script>