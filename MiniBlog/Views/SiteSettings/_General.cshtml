@model MiniBlog.Models.SiteModel
@using (Html.BeginForm("General/Save", "SiteSettings", FormMethod.Post, new { id = "formGeneralSettings" }) )
{
<div class="form-group">
    @Html.LabelFor(m => m.site_name)
    @Html.TextBoxFor(m => m.site_name, new { @class = "form-control", required = "required", type = "text", value = Model.site_name })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.site_header_name)
    @Html.TextBoxFor(m => m.site_header_name, new { @class = "form-control", required = "required", type = "text", value = Model.site_header_name })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.site_url)
    @Html.TextBoxFor(m => m.site_url, new { @class = "form-control", required = "required", type = "url", value = Model.site_url })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.site_desc)
    @Html.TextAreaFor(m => m.site_desc, new { @class = "form-control", value = Model.site_desc })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.site_keywords)
    @Html.TextBoxFor(m => m.site_keywords, new { @class = "form-control", type = "text", value = Model.site_keywords })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.slogan)
    @Html.TextBoxFor(m => m.slogan, new { @class = "form-control", required = "required", type = "text", value = Model.slogan })
</div>
<div class="form-group text-right">
    <button class="btn btn-danger" type="reset">Temizle</button>
    <button class="btn btn-outline-success" type="submit">Değişiklikleri Kaydet</button>
</div>
}
<script>
    $(function () {
        $("input#site_keywords").tagsinput('items');
        mbAjax.bindFormNonDialog($("#formGeneralSettings"), function () {
            helper.successForm($("#formGeneralSettings"));
        });
    });
</script>