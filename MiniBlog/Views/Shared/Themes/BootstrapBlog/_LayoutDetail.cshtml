<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.Title - @System.Configuration.ConfigurationManager.AppSettings["site_name"].ToString() -- @System.Configuration.ConfigurationManager.AppSettings["slogan"].ToString()</title>
    <meta name="description" content="@System.Configuration.ConfigurationManager.AppSettings["site_desc"].ToString()">
    <meta name="keywords" content="@System.Configuration.ConfigurationManager.AppSettings["site_keywords"].ToString()">
    <link href="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="~/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/Site/ThemeEngine/File/@Helper.Base64Encode("css/fontastic.css")" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <link href="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/@fancyapps/fancybox/jquery.fancybox.min.css")" rel="stylesheet" />
    <link href="/Site/ThemeEngine/File/@Helper.Base64Encode("css/style.default.css")" rel="stylesheet" />
    <link href="/Site/ThemeEngine/File/@Helper.Base64Encode("css/custom.css")" rel="stylesheet" /> 
    <script src="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/jquery/jquery.min.js")"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <header class="header">
        <!-- Main Navbar-->
        <nav class="navbar navbar-expand-lg">
            <div class="search-area">
                <div class="search-area-inner d-flex align-items-center justify-content-center">
                    <div class="close-btn"><i class="fa fa-times"></i></div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-8">
                            <form action="/Article/Search" class="search-form">
                                <div class="form-group">
                                    <input type="search" name="content" id="search" placeholder="Ne aramıştın?">
                                    <button type="submit" class="submit"><i class="fa fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <!-- Navbar Brand -->
                <div class="navbar-header d-flex align-items-center justify-content-between">
                    <!-- Navbar Brand --><a href="/" class="navbar-brand">@System.Configuration.ConfigurationManager.AppSettings["site_header_name"].ToString()</a>
                    <!-- Toggle Button-->
                    <button type="button" data-toggle="collapse" data-target="#navbarcollapse" aria-controls="navbarcollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span></span><span></span><span></span></button>
                </div>
                <!-- Navbar Menu -->
                <div id="navbarcollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="/" class="nav-link active">Ana Sayfa</a>
                        </li>
                        @{ Html.RenderAction("Pages", "Home", new { listItemClass = "nav-item", textItemClass = "nav-link" }); }
                        <li class="nav-item">
                            <a href="@Url.Content("~/Home/Contact")" class="nav-link ">İletişim</a>
                        </li>
                    </ul>
                    <div class="navbar-text"><a href="#" class="search-btn"><i class="fa fa-search"></i></a></div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main Content-->
    @RenderBody()
    <!-- Footer-->
    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <h6 class="text-white">Bootstrap Blog</h6>
                    </div>
                    <div class="contact-details">
                        <p>53 Broadway, Broklyn, NY 11249</p>
                        <p>Phone: (020) 123 456 789</p>
                        <p>Email: <a href="mailto:info@company.com">Info@Company.com</a></p>
                        <ul class="social-menu">
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-behance"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="menus d-flex">
                        <ul class="list-unstyled">
                            <li> <a href="#">My Account</a></li>
                            <li> <a href="#">Add Listing</a></li>
                            <li> <a href="#">Pricing</a></li>
                            <li> <a href="#">Privacy &amp; Policy</a></li>
                        </ul>
                        <ul class="list-unstyled">
                            <li> <a href="#">Our Partners</a></li>
                            <li> <a href="#">FAQ</a></li>
                            <li> <a href="#">How It Works</a></li>
                            <li> <a href="#">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="latest-posts">
                        @Html.Action("LatestArticles", "Home", new { limit = 3 })
                    </div>
                </div>
            </div>
        </div>
        <div class="copyrights">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; @System.Configuration.ConfigurationManager.AppSettings["site_name"].ToString() @DateTime.Now.Year</p>
                    </div>
                    <div class="col-md-6 text-right">
                        <p>
                            Template By <a href="https://bootstrapious.com/p/bootstrap-carousel" class="text-white">Bootstrapious</a>
                            <!-- Please do not remove the backlink to Bootstrap Temple unless you purchase an attribution-free license Bootstrap Temple or support us at http://bootstrapious.com/donate. It is part of the license conditions. Thanks for understanding :)                         -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer> 
    <script src="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/popper.js/umd/popper.min.js")"></script>
    <script src="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/bootstrap/js/bootstrap.min.js")"></script>
    <script src="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/jquery.cookie/jquery.cookie.js")"></script>
    <script src="/Site/ThemeEngine/File/@Helper.Base64Encode("vendor/@fancyapps/fancybox/jquery.fancybox.min.js")"></script>
    <script src="/Site/ThemeEngine/File/@Helper.Base64Encode("js/front.js")"></script>
</body>
</html>
