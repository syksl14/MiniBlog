@model MiniBlog.Models.ArticleModel
@using (Html.BeginForm("Save", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal-body">
        @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @Html.ValidationSummary(true, "")
            </div>
        }
        @Html.TextBoxFor(m => m.ArticleID, new { @class = "form-control", required = "required", type = "hidden", value = Model.ArticleID })
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryID)
            @Html.DropDownListFor(m => m.CategoryID, ViewBag.Categories as SelectList, "Seçiniz", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required", value = Model.Title })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Summary)
            @Html.TextAreaFor(m => m.Summary, new { @class = "form-control", required = "required", value = Model.Summary })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Article)
            @Html.TextAreaFor(m => m.Article, new { @class = "form-control", required = "required", value = Model.Article })
        </div>
        <div class="form-group text-right">
            @if (Model.Revisions.Count > 0)
            {
                <div class="btn-group">
                    <button type="button" onclick="revisions.list(1, @Model.ArticleID);" class="btn btn-default btn-sm"><i class="fa fa-clock-o"></i>&nbsp;Son Revizyonlar (@Model.Revisions.Count)</button>
                    <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Son Revizyonlar (@Model.Revisions.Count)</span>
                    </button>
                    <ul class="dropdown-menu">
                        @{int i = 1;}
                        @foreach (var r in Model.Revisions)
                        {
                            <li><a href="javascript: revisions.view(@r.RevisionID);"><i class="fa fa-pencil"></i>&nbsp;@(i + ".Revizyon") <i class="fa fa-arrow-right"></i>&nbsp; @r.Date.ToString("dd.MM.yyyy HH:mm:ss")</a></li>
                            i++;
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Keywords)
            @Html.TextBoxFor(m => m.Keywords, new { @class = "form-control", style = "width: 100%;", required = "required", value = Model.Keywords })
        </div>
        <div class="form-group">
            @Html.CheckBox("Privacy", Model.Privacy == "D" ? true : false, new { @class = "form-check-input" })
            <label class="form-check-label" for="Privacy">Taslak</label> (Yayınlanmayacaktır)
        </div>
        <div class="form-group" for="file">
            <label for="CoverPhoto">Kapak Fotoğrafı</label>
            <div class="row">
                <div class="col-md-4">
                    @if (Model.CoverPhoto == null)
                    {
                        Model.CoverPhoto = "/Content/imgs/no-image.png";
                    }
                    <img src="@Model.CoverPhoto?width=240" class="img-responsive well well-sm" />
                    @Html.TextBoxFor(m => m.CoverPhoto, new { type = "hidden", value = Model.CoverPhoto })
                </div>
                <div class="col-md-6">
                    <input type="file" name="file" id="file" class="form-control" />
                    <p class="small">Mevcut fotoğrafı değiştirmek için seçiniz.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
}
<script>
    $(function () {
        $("textarea#Article").summernote({
            height: 250,
            lang: 'tr-TR'
        });
        $("input#Keywords").tagsinput('items');
    });
</script>